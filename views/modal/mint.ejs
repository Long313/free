  <!-- Success Toast -->
  <div class="toast toast-success">
    <div class="toast-content">
      <p class="toast-title">Mint Successful</p>
      <div class="toast-content">
        <p class="toast-title">Tx: 0xskjskj</p>
      </div>
    </div>
  </div>

  <div class="toast toast-error">
    <div class="toast-content">
      <p class="toast-title">Mint Error</p>
      <div class="toast-content">
        <p class="toast-title">Tx: 0xskjskj</p>
      </div>
    </div>
  </div>
</div>
